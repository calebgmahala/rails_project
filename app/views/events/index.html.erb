<p id="notice"><%= notice %></p>

<h1>Events</h1>
<% if session[:permission] <= 1 %>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Date</th>
      <th>People</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= event.date %></td>
        <td><%= event.people %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'New Event', new_event_path %>  |
<%= link_to 'People', users_path %>
<% else %>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Date</th>
      <th>People</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= event.date %></td>
        <td><%= event.people %></td>
        <td><%= link_to 'Show', event %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'People', users_path %>
<% end %>
