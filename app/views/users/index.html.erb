<p id="notice"><%= notice %></p>
<h1>Users</h1>
<% if session[:permission] == 0 %>
<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Team</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.team.name %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %><td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% else %>
<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Team</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.team %></td>
        <td><%= link_to 'Show', user %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>

<br>

<%= link_to 'Events', events_path %>  |
<%= link_to 'Log out', logout_path, method: :delete %>
